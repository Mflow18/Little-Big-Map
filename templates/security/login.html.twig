{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="container-fluid registration-container">
        <form method="post" class="registration-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 form-title">
                    Vous êtes déjà connecté en tant que {{ app.user.firstName }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal form-title">Connecte toi à ton Little Big Compte !</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
                   autofocus>
            <label for="inputPassword">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <p>Pas encore de compte? Clique <a href="{{ path('createaccount') }}" class="btn btn-primary">ici </a> pour créer un compte</p>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Rappelez-vous de moi !
                </label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">
            Je m'enregistre !
            </button>
        </form>
    </section>
{% endblock %}
