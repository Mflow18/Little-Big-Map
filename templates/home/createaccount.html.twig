{% extends 'base.html.twig' %}

{% block title %}Votre Little Big Compte !{% endblock %}

{% block body %}
 {{ form_start(form) }}
<div class="registration-form-block">
    <div class="registration-form">
        {{ form_label(form.firstName, 'Prénom') }}
        {{ form_widget(form.firstName) }}

        {{ form_label(form.lastName, 'Nom de famille') }}
        {{ form_widget(form.lastName) }}

        {{ form_label(form.email, 'Email') }}
        {{ form_widget(form.email) }}

        {{ form_label(form.password.first, 'Mot de passe') }}
        {{ form_widget(form.password.first) }}

        {{ form_label(form.password.second, 'Veuillez répéter votre mot de passe') }}
        {{ form_widget(form.password.second) }}

        {{ form_label(form.picture, 'Photo de profil') }}
        {{ form_widget(form.picture) }}

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
