{% extends 'base.html.twig' %}

{% block title %}Votre Little Big Compte !{% endblock %}

{% block body %}
    <section class="container-fluid registration-container">
        <H2 class="form-title">Pour commencer ta Little Big Aventure, crée un compte :</H2>
        {{ form_start(form) }}
        <div class="registration-form-block">
            <div class="registration-form">
                {{ form_label(form.firstName, 'Prénom') }}
                {{ form_widget(form.firstName) }}

                {{ form_label(form.lastName, 'Nom de famille') }}
                {{ form_widget(form.lastName) }}

                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email) }}

                {{ form_label(form.password.first, 'Mot de passe') }}
                {{ form_widget(form.password.first) }}

                {{ form_label(form.password.second, 'Veuillez répéter votre mot de passe') }}
                {{ form_widget(form.password.second) }}

                {{ form_label(form.picture, 'Photo de profil') }}
                {{ form_widget(form.picture) }}

                {{ form_label(form.professions, 'Entrez votre profession :') }}
                {{ form_widget(form.professions) }}

                {{ form_label(form.age, "Votre tranche d'âge :") }}
                {{ form_widget(form.age) }}

                {{ form_label(form.children, "Nombre d'enfants : ") }}
                {{ form_widget(form.children) }}

                {{ form_label(form.family, 'Votre situation familiale :') }}
                {{ form_widget(form.family) }}

                {{ form_label(form.irises, 'Les quartiers qui vous intéressent : ') }}
                {{ form_widget(form.irises) }}

                {{ form_end(form) }}
                <a href="{{ path('app_login') }}">J'ai déjà un compte</a>
            </div>
        </div>
    </section>
{% endblock %}
